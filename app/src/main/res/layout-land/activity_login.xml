<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bluegreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/email_text_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            tools:layout_editor_absoluteX="279dp"
            tools:layout_editor_absoluteY="37dp" />

        <EditText
            android:id="@+id/email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/name_email_com"
            android:inputType="textEmailAddress|textVisiblePassword"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="72dp" />

        <EditText
            android:id="@+id/login_password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="132dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="191dp" />

        <TextView
            android:id="@+id/createAccount_login"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:gravity="center"
            android:clickable="true"
            android:onClick="onClick"
            android:text="@string/no_account_yet_create_one"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            tools:layout_editor_absoluteX="209dp"
            tools:layout_editor_absoluteY="252dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>